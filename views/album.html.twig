<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{ title }} // {{ step.to.name }}</title>

    <link href="{{ relative_path_between(album.path, webRoot) }}/dist/gallery.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <span class="navbar-brand"><a class="navbar-brand" href="{{ relative_path_between(album.path, webRoot) }}/">{{ title }}</a> // {{ step.to.name }}</span>
    </nav>

    <main role="main">
        <div class="album py-5 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>{{ step.to.name }}</h1>
                    </div>
                </div>
                <div class="row">
                    <div id="grid" class="grid col-12">
                        {% for image in album.images %}
                        <div class="grid-item" data-src="{{ image.relativeTo(album.path).path }}">
                            <img class="card-img-top photo" src="{{ image.relativeTo(album.path).thumbnailPath }}" />
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="{{ relative_path_between(album.path, webRoot) }}/dist/album.js"></script>
</body>
</html>
